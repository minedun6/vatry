{% extends '::base.html.twig' %}
{% block description %}Aéroport de Vatry réservation d'une navette | Centrale de réservation Vatry{% endblock %}

{% block title %}
    Réservation des navettes de/à Aéroport de Vatry : Réservez, dès maintenant, votre navette dans les deux sens entre votre destination et l'aéroport Paris-Vatry.
{% endblock %}

{% block logo %}
    <a href="{{ path('homepage') }}" title="Transfers"><img
                src="{{ asset('app/images/logo.jpg') }}" width="80px" alt="Navettes Aéroport Paris Vartry"/></a>
{% endblock %}

{% block main_block %}
    <style>
        body {
            padding-top: 100px;
        }

        h2 {
            font-size: 24px;
            padding: 0 0 28px;

        }

        ul > li:before {
            content: "\2022";
            font-size: 30px;
            color: #DBBC94;
            position: absolute;
            /* top: -10px; */
            left: 0;
        }

        h2, h3, h4 {
            line-height: 40px;
        }

        div {
            padding-bottom: 20px;
        }

        .map-container {
            width: 100%;
            height: 385px;
            margin-top: 40px;
            padding: 10px;
            background-color: white;
        }

    </style>

    <!-- Main -->
    <main class="main" role="main">
        <!-- Page info -->
        <header class="site-title color">
            <div class="wrap">
                <div class="container">
                    <h1>Réservations des navettes de/à aéroport Paris-Vatry</h1>

                </div>
            </div>
        </header>
        <!-- //Page info -->


        <div class="row">
            <div align="left" style="margin-left: 25px">
                <p>
                Réservez, dès maintenant, votre navette dans les deux sens entre votre destination et
                l'<a href="{{ path('homepage') }}">aéroport Paris-Vatry</a> :
                </p>
                <br><br>
            </div>
            <br>

            <div class="services boxed " id="services">

                <!-- Item -->
                <article class="one-fourth wow fadeIn" data-wow-delay=".4s">
                    <figure class="featured-image">
                        <img src="{{ asset('app/images/correspondance-gares.jpg') }}" alt="Correspondance gares"/>

                    </figure>
                    <div class="details">
                        <h4>Navettes Aéroport – Gares</h4>

                        &#10003; <a href="{{ path('gare_transfer_first_step',{'zipCode' : constant("AppBundle\\Entity\\Location::GARE_CHALONS")}) }}">Gare de Châlons-en- Champagne</a><br><br>
                        &#10003; <a href="{{ path('gare_transfer_first_step',{'zipCode' : constant("AppBundle\\Entity\\Location::GARE_REIMS")}) }}">Gare de Reims Centre</a><br>

                    </div>
                </article>
                <!-- //Item -->

                <!-- Item -->
                <article class="one-fourth wow fadeIn" data-wow-delay=".2s">
                    <figure class="featured-image">
                        <img src="{{ asset('app/images/img2.jpg') }}" alt="Réservation Transfert privé de/à Aéroport de Vatry "/>

                    </figure>
                    <div class="details">
                        <h4>Transfert privé</h4>

                        &#10003; <a href="{{ path('private_transfer_first_step') }}">Taxi Aéroport &#8651; Domicile</a><br><br>
                        &#10003; <a href="{{ path('private_aeroport_transfer_first_step') }}">Taxi Aéroport &#8651; Aéroport</a><br>

                    </div>
                </article>
                <!-- //Item -->


                <!-- Item -->
                <article class="one-fourth wow fadeIn">
                    <figure class="featured-image">
                        <img src="{{ asset('app/images/img1.jpg') }}" alt="Réservation Navette partagé de/à Aéroport de Vatry "/>

                    </figure>
                    <div class="details">
                        <h4>Navettes partagées</h4>

                        &#10003; <a href="{{ path('porteAporte_transfer_first_step') }}">Navette Aéroport &#8651; Domicile</a><br><br>
                        &#10003; <a href="{{ path('interVille_transfer_first_step') }}">Navette Inter-Villes</a><br>


                    </div>
                </article>
                <!-- //Item -->
                <!-- Item -->
                <article class="one-fourth wow fadeIn" data-wow-delay=".6s">
                    <figure class="featured-image">
                        <img src="{{ asset('app/images/img3.jpg') }}" alt="Service Last Minute"/>

                    </figure>
                    <div class="details">
                        <h4>Service last minute</h4>

                        &#10003; <a href="{{ path('description_lastminute') }}">Découvrez le service</a><br><br>
                        &#10003; <a href="{{ path('contact') }}">Consultez la disponibilité</a><br>

                    </div>
                </article>
                <!-- //Item -->
            </div>
        </div>

        <div class="one-half">
            <div class="map-container" >
                <div style="width: 100%; height: 100%;" id="aeroport-map">

                </div>
            </div>
        </div>

    </main>
    <!-- //Main -->

{% endblock %}