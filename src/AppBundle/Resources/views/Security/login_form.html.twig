{% if error is defined and error  %}
    <div class="alert alert-danger form-login-error" role="alert">
        {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
{% else %}
    <div class="alert alert-danger  form-login-error" style="display: none;">

    </div>
{% endif %}

{#<form action="/login" method="post" id="login-form">#}
<form action="{{ path('login') }}" method="post" id="login-form">
    <div class="row">
        <label for="username">E-mail</label>
        <input type="email" name="_username" id="username" class="form-control">
    </div>

    <div class="row">
        <label for="password">Mot de passe</label>
        <input type="password" name="_password" id="password" class="form-control">
    </div>

    <div class="row">
        <button {% if submit is defined %} type="submit" {% else %} type="button" {% endif %}
                id="login-btn" class="btn btn-success btn-block">Se Connecter
        </button>
    </div>

    <div class="row">
        <div style="text-align: right" class="col-xs-12">
            <a target="_blank" href="{{ path('password_forgotten') }}">Mot de passe oubli√©</a>
        </div>
    </div>

</form>