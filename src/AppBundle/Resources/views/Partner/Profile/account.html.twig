        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <label for="">Confirmer le nouveau mot de passe</label>
            {{ form_widget(passwordForm.confirmation_password,{ 'attr' : { 'class' : 'form-control' } }) }}
            {{ form_errors(passwordForm.confirmation_password) }}
        </div>
    </div>


    <div class="row">
        <div class="col-xs-12">
            <button type="reset" class="btn btn-danger pull-right" >Annuler</button>
            <button class="btn btn-success pull-right" type="submit" style="margin-right: 5px;">Modifier Votre mot de passe</button>
        </div>
    </div>

    {{ form_end(passwordForm) }}
