{% extends parent %}

{% block main_block %}
    <style>
        body {
            padding-top: 100px;
        }

        h2 {
            font-size: 24px;
            padding: 0 0 28px;

        }

        ul > li:before {
            content: "\2022";
            font-size: 30px;
            color: #DBBC94;
            position: absolute;
            /* top: -10px; */
            left: 0;
        }

        h2, h3, h4 {
            line-height: 40px;
        }

        div {
            padding-bottom: 20px;
        }

        .space {

            margin-left: 47px;
            font-size: 16px;
        }
    </style>
    <header class="site-title color">
        <div class="wrap">
            <div class="container">
                <h1>Devis</h1>
                <nav role="navigation" class="breadcrumbs">
                    <ul>
                        <li><a href="{{ path('homepage') }}" title="Accueil">Devis</a></li>
                        <li>Autre transfert</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <!-- //Page info -->


    <div class="wrap">
        <div class="row">

            <!--- Content -->
            <div class="full-width content textongrey">
                <h2>Détail du transfert</h2>
            </div>
            <!--- //Content -->

            <!-- Form -->
            <div class="three-fourth">
                <form method="post" action="{{ path('devis_particular_command') }}">
                    <div class="f-row">
                        <div class="one-half">
                            <label for="name">Nom et Prénom</label>
                            <input type="text" name="name" required id="name"/>
                        </div>
                        <div class="one-half">
                            <label for="email">E-mail du client</label>
                            <input type="email" name="email" required id="email"/>
                        </div>
                    </div>
                    <div class="f-row">
                        <div class="one-third">
                            <label for="sujet">Lieu de prise en charge</label>
                            <input type="text" name="departure_place" required/>
                        </div>
                        <div class="one-third">
                            <label for="sujet">Ville</label>
                            <input type="text" name="ville" required/>
                        </div>
                        <div class="one-third">
                            <label for="sujet">Code postal</label>
                            <input type="text" name="zip_code" required/>
                        </div>
                    </div>
                    <div class="f-row">
                        <div class="one-third">
                            <label for="sujet">Lieu de dépôt</label>
                            <input type="text" name="arrival_place" required/>
                        </div>
                        <div class="one-third">
                            <label for="sujet">Ville</label>
                            <input type="text" name="ville1" required/>
                        </div>
                        <div class="one-third">
                            <label for="sujet">Code postal</label>
                            <input type="text" name="zip_code1" required/>
                        </div>
                    </div>
                    <div class="f-row">
                        <div id="date" class="one-half">
                            <label for="sujet">Date et heure de la prestation aller</label>
                            <input type="text" name="flight_time" required id="start_flight_date"/>
                        </div>
                    </div>
                    <div class="f-row">
                        <div class="one-half">
                            <label for="round-trip">Aller/Retour</label>
                            <input type="checkbox" name="round-trip" id="round-trip"/>
                        </div>
                    </div>
                    <div class="f-row">
                        <div class="one-third">
                            <label for="sujet">Nombre d'adultes</label>
                            <input type="text" name="adults_number" required/>
                        </div>
                        <div class="one-third">
                            <label for="sujet">Nombre d'enfants (2 - 12 ans)</label>
                            <input type="text" name="infants_number"/>
                        </div>
                        <div class="one-third">
                            <label for="sujet">Nombre de bébés (< 2 ans)</label>
                            <input type="text" name="babies_number"/>
                        </div>
                    </div>
                    <div class="f-row">
                        <div class="one-half">
                            <label for="tarif">Tarif</label>
                            <input type="text" name="tarif" id="tarif" required pattern="[0-9]+([,\.][0-9]+)?"/>
                        </div>
                    </div>
                    <div class="f-row">
                        <input type="submit" value="Valider" id="submit" name="submit"
                               class="btn color medium right"/>
                    </div>
                </form>
            </div>
            <!-- //Form -->

            <!--- Sidebar -->
            <aside class="one-fourth sidebar right">
                <!-- Widget -->
                <div class="widget">
                    <h4>BESOIN D'AIDE?</h4>

                    <div class="textwidget">
                        <p>Vous avez besoin d’une information ?</p>

                        <p>Nous restons à votre disposition pour répondre à toutes vos interrogations 7jours/7.</p>

                        <p>Appelez-nous sur : </p>

                        <p class="contact-data"><span class="ico phone black"></span> 01 51 31 01 01 <br>
                        <p class="space">01 51 31 01 00</p></p>
                    </div>
                </div>
                <!-- //Widget -->

                <!-- Widget -->
                <div class="widget">
                    <h4>Facebook</h4>
                    <iframe src="https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2Fnavettevatry%2F%3Ffref%3Dts&tabs=timeline&width=270&height=300&small_header=false&adapt_container_width=true&hide_cover=false&show_facepile=true&appId"
                            width="270" style="border:none;overflow:hidden" scrolling="no" frameborder="0"
                            allowTransparency="true"></iframe>
                </div>
                <!-- //Widget -->
            </aside>
            <!--- //Sidebar -->
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('app/js/infobox.js') }}"></script>
    <!--<script src="{{ asset('app/js/v2/scripts.js') }}"></script>-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.11.2/moment.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/js/bootstrap-datetimepicker.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/css/bootstrap-datetimepicker.min.css"
          rel="stylesheet">
    <script>
        $(function () {
            $('#start_flight_date').datetimepicker({
                format: 'DD/MM/YYYY HH:mm',
                minDate: new Date(),
                sideBySide: true
            });

            $(document).on("change", "#round-trip", function () {
                $is_checked = $(this).parent().hasClass('checked');
                if ($is_checked) {
                    $parent = $("#date");
                    $clone = $parent.clone();
                    $clone.attr('id', 'date-round-trip');
                    $label = $clone.find('label');
                    $label.text('Date et heure de la prestation retour');
                    $input = $clone.find('input');
                    $input.attr({'id': 'round_trip_flight_date', 'name': 'roundtrip-date'});
                    $input.datetimepicker({
                        format: 'DD/MM/YYYY HH:mm',
                        minDate: new Date(),
                        sideBySide: true
                    });
                    $parent.after($clone);
                } else {
                    $("#date-round-trip").remove();
                }
            });

            $('#start_flight_date').on("dp.change", function (e) {
                if ($('#round_trip_flight_date').length > 0)
                    $('#round_trip_flight_date').data("DateTimePicker").minDate(e.date);
            });
            function getFormattedDate(date) {
                var day = date.getDate();
                var month = date.getMonth() + 1;
                var year = date.getFullYear().toString().slice(2);
                return day + '-' + month + '-' + year;
            }
        });
    </script>
{% endblock %}