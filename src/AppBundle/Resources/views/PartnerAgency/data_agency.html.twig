{% extends '@App/PartnerAgency/index.html.twig' %}

{% block page_title %}
        Modification données agence
{% endblock %}
{% block content %}

    <h3>Données agence</h3>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">

            <div class="row">
                <div class="col-xs-12">
                    <label class="required">Source</label>
                    {{ form_widget(form.source,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.source) }}
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <label class="required">Agence</label>
                    {{ form_widget(form.nom,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.nom) }}
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <label class="required">Réseau</label>
                    {{ form_widget(form.reseau,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.reseau) }}
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <label class="required">Adresse</label>
                    {{ form_widget(form.adresse,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.adresse) }}
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <label class="required">Adresse2</label>
                    {{ form_widget(form.adresse2,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.adresse2) }}
                </div>
            </div>

        </div>

        <div class="col-md-6">

            <div class="row">
                <div class="col-xs-8">
                    <label for="">Ville</label>
                    {{ form_widget(form.ville,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.ville) }}
                </div>
                <div class="col-xs-4">
                    <label for="">Code Postal</label>
                    {{ form_widget(form.cp,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.cp) }}
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <label for="">Email</label>
                    {{ form_widget(form.email,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.email) }}
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <label for="">Web</label>
                    {{ form_widget(form.web,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.web) }}
                </div>
            </div>

            <div class="row">
                <div class="col-xs-6">
                    <label for="">Téléphone</label>
                    {{ form_widget(form.tel,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.tel) }}
                </div>
                <div class="col-xs-6">
                    <label class="required">Fax</label>
                    {{ form_widget(form.fax,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.fax) }}
                </div>
            </div>

        </div>
    </div>


    <div class="row">
        <div style="text-align: right" class="col-xs-6">
            <button type="submit" class="btn medium btn-success">Enregistrer</button>
            <button type="reset" class="btn medium btn-danger">Annuler</button>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}