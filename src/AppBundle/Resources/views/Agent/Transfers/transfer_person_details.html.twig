{% extends parent %}


{% block page_title %}
    Détails du passager et{% if transfer.affectedTo and transfer.affectedTo.type==constant('TYPE_PARTNERAGENCY',transfer.affectedTo) %} de l'agence partenaire{% else %} du client {% endif %}
{% endblock %}

{% block content %}

    <h3>Informations du passager</h3>

    <div class="row">
        <div class="row col-xs-6">
            <div class="col-xs-6"><label>Nom et Prénom : </label></div>
            <div class="col-xs-6">
                {{ transfer.passenger.name|title }} {{ transfer.passenger.lastname|title }}</div>
        </div>
        <div class="row col-xs-6">
            <div class="col-xs-6"><label>Adresse mail : </label></div>
            <div class="col-xs-6">
                {{ transfer.passenger.email }} </div>
        </div>
    </div>

    <div class="row">
        <div class="row col-xs-6">
            <div class="col-xs-6"><label>Nombre d'adultes : </label></div>
            <div class="col-xs-6"> {{ transfer.qty }}</div>
        </div>
        <div class="row col-xs-6">
            <div class="col-xs-6"><label>Téléphone : </label></div>
            <div class="col-xs-6">
                {{ transfer.passenger.tel|title }} </div>
        </div>
    </div>

    <div class="row">
        <div class="row col-xs-6">
            <div class="col-xs-6"><label>Nombre d'enfants : </label></div>
            <div class="col-xs-6">
                {% if transfer.qtyChild  ==null %} 0 {% else %} {{ transfer.qtyChild }} {% endif %}
            </div>
        </div>
        <div class="row col-xs-6">
            <div class="col-xs-6"><label>Adresse : </label></div>
            <div class="col-xs-6">
                {{ transfer.passenger.address|title }}, {{ transfer.passenger.zipCode }}
                , {{ transfer.passenger.town|title }} </div>
        </div>
    </div>

    <div class="row">
        <div class="row col-xs-6">
            <div class="col-xs-6"><label>Nombre de bébés : </label></div>
            <div class="col-xs-6">
                {% if transfer.qtyBaby  == null %} 0 {% else %} {{ transfer.qtyBaby }} {% endif %}
            </div>
        </div>
        <div class="row col-xs-6">
            <div class="col-xs-6"><label>Pays: </label></div>
            <div class="col-xs-6">
                {{ transfer.passenger.country|title }} </div>
        </div>
    </div>

    {% if transfer.affectedTo and transfer.affectedTo.type==constant('TYPE_PARTNERAGENCY',transfer.affectedTo) %}
        <h3>Détails agence</h3>
        <div class="row">
            <div class="col-xs-3"><label>Raison sociale</label></div>
            <div class="col-xs-8"> {{ transfer.affectedTo.agencePartner.agence.nom|title }} </div>
        </div>

        <div class="row">
            <div class="col-xs-3"><label>Adresse</label></div>
            <div class="col-xs-3"> {{ transfer.affectedTo.agencePartner.agence.adresse }} </div>
            <div class="col-xs-3"><label>Adresse2</label></div>
            <div class="col-xs-3"> {{ transfer.affectedTo.agencePartner.agence.adresse2 }} </div>
        </div>

        <div class="row">
            <div class="col-xs-3"><label>Code postal</label></div>
            <div class="col-xs-3"> {{ transfer.affectedTo.agencePartner.agence.cp }} </div>
            <div class="col-xs-3"><label>Ville</label></div>
            <div class="col-xs-3">{{ transfer.affectedTo.agencePartner.agence.ville }}</div>
        </div>

        <div class="row">
            <div class="col-xs-3"><label>Email</label></div>
            <div class="col-xs-3">{{ transfer.affectedTo.agencePartner.agence.email }}</div>
            <div class="col-xs-3"><label>Tél</label></div>
            <div class="col-xs-3">{{ transfer.affectedTo.agencePartner.agence.tel }}</div>
        </div>
    {% else %}
        <h3>Détails du client</h3>
        <div class="row">
            <div class="row col-xs-6">
                <div class="col-xs-6"><label>Nom et Prénom : </label></div>
                <div class="col-xs-6">
                    {{ transfer.createdBy.person.name|title }} {{ transfer.createdBy.person.lastname|title }}</div>
            </div>
            <div class="row col-xs-6">
                <div class="col-xs-6"><label>Adresse mail : </label></div>
                <div class="col-xs-6">
                    {{ transfer.createdBy.person.email }} </div>
            </div>
        </div>

        <div class="row">
            <div class="row col-xs-6">
                <div class="col-xs-6"><label>Téléphone : </label></div>
                <div class="col-xs-6">
                    {{ transfer.createdBy.person.tel|title }} </div>
            </div>
            <div class="row col-xs-6">
                <div class="col-xs-6"><label>Adresse : </label></div>
                <div class="col-xs-6">
                    {{ transfer.createdBy.person.address|title }}, {{ transfer.createdBy.person.zipCode }}
                    , {{ transfer.createdBy.person.town|title }} </div>
            </div>
        </div>
    {% endif %}


{% endblock %}