{% extends '@App/AgentAdmin/index.html.twig' %}

{% block page_title %}
    {% if new is defined and new == true %}
        Création d'une agence partenaire
    {% else %}
        Modification d'une agence partenaire
    {% endif %}
{% endblock %}

{% block content %}

    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">

            <div class="row">
                <div class="col-xs-12">
                    <label class="required">Destinations</label>
                    {{ form_widget(form.destination,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.destination) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <label >Observations</label>
                    {{ form_widget(form.observations,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.observations) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <label class="required">Referent</label>
                    {{ form_widget(form.referent,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.referent) }}
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="row">
                <div class="col-xs-12">
                    <label for="">Référent poste</label>
                    {{ form_widget(form.posteRefernet,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.posteRefernet) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <label for="">Téléphone</label>
                    {{ form_widget(form.tel,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.tel) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <label class="required">Email/Nom d'utilisateur</label>
                    {{ form_widget(form.user.email,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.user.email) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <label for="">Email 2 (optionnelle)</label>
                    {{ form_widget(form.email,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.email) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <label class="required">Activité</label>
                    {{ form_widget(form.activity,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.activity) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <label class="required">RC</label>
                    {{ form_widget(form.rc,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.rc) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <label class="required">Commission (entre 0,00% et 100,00%)</label>
                    {{ form_widget(form.commission,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.commission) }}
                </div>
                <div class="col-xs-6">
                    <label for="">Nombre de jours (entre 0 - 31)</label>
                    {{ form_widget(form.nbjours,{ 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_errors(form.nbjours) }}
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div style="text-align: right" class="col-xs-6">
            <button type="submit" class="btn medium btn-success">Enregistrer</button>
            <button type="reset" class="btn medium btn-danger">Annuler</button>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}