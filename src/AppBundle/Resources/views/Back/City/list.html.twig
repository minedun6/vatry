{% extends '@App/Back/index.html.twig' %}

{% block page_title %}
    Liste des destinations
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(function(){
            initDataTable('#city-table',{
                lengthChange: false,
                columnDefs: [
                    {
                        targets: [-1],
                        orderable: true
                    }
                ]
            });
        });


    </script>
{% endblock %}
{% block stylesheets %}

    {{ parent() }}

    <style>

        #cityTable th {
            background-color: #cb8d1e;
            color: #fff;
            font-family: Cantarell helvetica, arial, sans-serif;
            font-weight: bold;
            font-size: 15px;
            text-transform: capitalize;
            text-align: left;

        }

        .tb1 label {
            text-transform: capitalize;
            font-family: helvetica, arial, sans-serif;
            font-weight: bold;
            font-size: 15px;
        }

        tbody {
            text-transform: capitalize !important;
            font-size: 13px;
        }

    </style>

{% endblock %}
{% block content %}
    <style>
        td{
            text-transform: none !important;
        }
    </style>
    <table id="city-table" class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            {#<th>Source</th>#}
            <th>Destination</th>
           <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
                <td>{{ city.designation }}</td>
                <td>
                        <a href="{{ path('toogle_city',{'id' : city.id } ) }}" title="Toggle">
                            {% if(city.status is same as("desactive"))%}
                                <span class="glyphicon glyphicon-folder-open"></span>
                            {%else%}
                                <span class="glyphicon glyphicon-folder-close"></span>
                            {% endif %}
                        </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  {% endblock %}