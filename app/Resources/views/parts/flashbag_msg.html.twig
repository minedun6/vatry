{% if app.session.flashBag.has('success') %}
    {% for m in app.session.flashBag.get('success') %}
        <div class="alert alert-success" role="alert">
            <span class="glyphicon glyphicon-ok"></span>  {{ m }}
        </div>
    {% endfor %}
{% endif %}

        {% if app.session.flashBag.has('warning') %}
            {% for m in app.session.flashBag.get('warning') %}
                <div class="alert alert-warning" role="alert">
                    <span class="glyphicon glyphicon-warning-sign"></span> {{ m }}
                </div>
            {% endfor %}
        {% endif %}

        {% if app.session.flashBag.has('info') %}
            {% for m in app.session.flashBag.get('info') %}
                <div class="alert alert-info" role="alert">
                    <span class="glyphicon glyphicon-info-sign"></span> {{ m }}
                </div>
            {% endfor %}
        {% endif %}

        {% if app.session.flashBag.has('error') %}
            {% for m in app.session.flashBag.get('error') %}
                <div class="alert alert-danger" role="alert">
                    <span class="glyphicon glyphicon-remove"></span> {{ m }}
                </div>
            {% endfor %}
        {% endif %}